{
	"name": "vpdb",
	"version": "v2.0.3-SNAPSHOT",
	"description": "Virtual Pinball Database",
	"main": "src/app.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/vpdb/server"
	},
	"keywords": [
		"visual pinball",
		"vp10",
		"vpx"
	],
	"author": "freezy",
	"license": "GPL-2.0",
	"bugs": {
		"url": "https://github.com/vpdb/server/issues"
	},
	"scripts": {
		"start": "node src/app.js",
		"serve:dev": "nodemon --config deploy/nodemon/dev.json --exec node --inspect src/app.js",
		"serve:test": "nyc --reporter=lcov --reporter=html node app.js",
		"serve:test:debug": "node --inspect app.js",
		"serve:protractor": "cross-env NODE_ENV=test APP_SETTINGS=src/config/settings-protractor.js PORT=7357 APP_NAME=local run-s test:dropdbs start",
		"build:lint": "eslint src/**/*.js",
		"test:dropdbs": "node deploy/tools/dropdb",
		"test:rimraf": "rimraf .nyc_output coverage",
		"test:wait": "node deploy/tools/wait",
		"test:finish": "cross-env PORT=7357 node deploy/tools/finish",
		"test:mocha": "mocha --reporter spec --timeout 120000 test/**/*.test.js",
		"test:run": "run-s test:wait test:mocha test:finish",
		"test:serve": "cross-env NODE_ENV=test APP_SETTINGS=src/config/settings-test.js PORT=7357 APP_NAME=local run-s build:lint test:dropdbs test:rimraf serve:test",
		"test:serve:debug": "cross-env NODE_ENV=test APP_SETTINGS=src/config/settings-test.js PORT=7357 APP_NAME=local run-s test:dropdbs test:rimraf serve:test:debug",
		"test:ci": "run-p test:serve test:run"
	},
	"engines": {
		"node": "8.x"
	},
	"mod-project-name": "vpdb",
	"dependencies": {
		"acl": "^0.4.11",
		"handlebars": "^4.0.11",
		"koa": "^2.5.0",
		"koa-bodyparser": "^4.2.0",
		"koa-logger": "^3.2.0",
		"koa-router": "^7.4.0",
		"lodash": "^4.17.5",
		"logform": "^1.4.2",
		"mongoose": "^5.0.15",
		"mongoose-unique-validator": "^2.0.0",
		"nodemailer": "^4.6.4",
		"passport": "^0.4.0",
		"randomstring": "^1.1.5",
		"redis": "^2.8.0",
		"shortid32": "^0.1.1",
		"sqreen": "^1.17.1",
		"uglify-js": "^3.3.21",
		"validator": "^9.4.1",
		"winston": "^3.0.0-rc5"
	},
	"devDependencies": {
		"@types/koa": "^2.0.45",
		"nodemon": "^1.17.3"
	}
}
